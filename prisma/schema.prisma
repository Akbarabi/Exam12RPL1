generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  MANAGER
  ADMIN
  KASIR
  User
}

enum Jenis {
  Makanan
  Minuman
}

enum Status {
  Belum_bayar
  Lunas
}

model User {
  id        Int      @unique @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Menu {
  id               Int                @unique @default(autoincrement())
  name             String
  price            Decimal
  jenis            Jenis
  deskripsi        String
  gambar           String
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  Detail_transaksi Detail_transaksi[]
}

model Meja {
  id         Int @unique @default(autoincrement())
  nomor_meja Int
}

model Transaksi {
  id               Int                @unique @default(autoincrement())
  tanggal          DateTime
  id_user          Int
  id_meja          Int
  nama_pelanggan   String
  status           Status
  Detail_transaksi Detail_transaksi[]
}

model Detail_transaksi {
  id           Int       @unique @default(autoincrement())
  harga        Decimal
  id_transaksi Transaksi @relation(fields: [transaksiId], references: [id])
  id_menu      Menu      @relation(fields: [menuId], references: [id])
  transaksiId  Int
  menuId       Int
}
